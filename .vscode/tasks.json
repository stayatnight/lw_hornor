{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "python3",
            "args": [
                "start_build.py",
                "clean"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/ln882h-custom-imou" // 指定工作目录
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "python3",
            "args": [
                "start_build.py",
                "build"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/ln882h-custom-imou" // 指定工作目录
            }
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "python3",
            "args": [
                "start_build.py",
                "rebuild"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/ln882h-custom-imou" // 指定工作目录
            }
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "python3",
            "args": [
                "start_build.py",
                "jflash"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/ln882h-custom-imou" // 指定工作目录
            }
        },
        {
            "label": "config",
            "type": "shell",
            "command": "python3",
            "args": [
                "start_build.py",
                "config"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/ln882h-custom-imou" // 指定工作目录
            }
        },
        {
            "label": "ota_pack",
            "type": "shell",
            "command": "python3",
            "args": [
                "convert_ota.py"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}" // 指定工作目录
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "meson",
            "args": [
                "test",
                "-C",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/unity_test" // 指定工作目录
            }
        },
        {
            "label": "build_test",
            "type": "shell",
            "command": "meson",
            "args": [
                "compile",
